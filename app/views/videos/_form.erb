<% @video.tags.build %>

<%= form_for(@video) do |video_form| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= video_form.label :name %><br />
    <%= video_form.text_field :name %>
  </div>
  <div class="field">
    <%= video_form.label :title %><br />
    <%= video_form.text_field :title %>
  </div>
  <div class="field">
    <%= video_form.label :content %><br />
    <%= video_form.text_area :content %>
  </div>



   <h2>Tags</h2>
   <!--%= render :partial => "tags/form", :locals => {:form => video_form} %
   form_for 用于根据模型对象生成表单。比如 f.text_field :name 会告诉rails生成一个文本输入框，并且保存模型的name属性
   -->




  <div class="actions">
    <%= video_form.submit %>
  </div>
<% end %>


